@model sertbl
@{
    ViewBag.Title = "updateSer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <!-- page header -->
        <div class="col-lg-12">
            <h1 class="page-header">Forms</h1>
        </div>
        <!--end page header -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Elements -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Form Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            @using (Html.BeginForm("submitUpdate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {

                            <div class="form-group">
                                <label>Name</label>
                                @Html.TextBoxFor(c => c.SerName, "", new { @class = "form-control", @placeholder = "Name" })
                            </div>

                                <div class="form-group">
                                    <label>File input</label>
                                    <input type="file" name="file" id="file" />
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    @Html.TextAreaFor(c => c.SerDes, 10, 40, new { @class = "form-control", @placeholder = "Name" });
                                </div>


                                @Html.TextBox("btnsubmit", "Save Subject", new { type = "Submit", @class = "btn btn-primary" })
                                @Html.TextBox("btnsubmit", "Save Subject", new { type = "Reset", @class = "btn btn-danger" })
                            }
                        </div>

                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>
</div>

