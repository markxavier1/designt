@model cattbl
@{
    ViewBag.Title = "AddCat";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <!-- page header -->
        <div class="col-lg-12">
            <h1 class="page-header">Add Catagory</h1>
        </div>
        <!--end page header -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Elements -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Add Catagory
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            @using (Html.BeginForm("submitcat", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {

                            <div class="form-group">
                                <label>Name</label>
                                @Html.TextBoxFor(c => c.catType, "", new { @class = "form-control", @placeholder = "Name" })
                            </div>
                           
                                @Html.TextBox("btnsubmit", "Save Catagory", new { type = "Submit", @class = "btn btn-primary" })
                                @Html.TextBox("btnsubmit", "Reset", new { type = "Reset", @class = "btn btn-danger" })
                            }
                        </div>

                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>
</div>

